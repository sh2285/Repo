<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <style>
        .navbar-inverse {
            background-color: #428bca !important;
            border-color: #428bca !important;
            color: #ffffff !important;
        }

        .navbar > .container .navbar-brand {
            margin-left: -15px;
            color: #ffffff !important;
        }

        .navbar-nav {
            float: right !important;
            margin: 0;
            /*font:small!important;*/
            /*font-style:italic;*/
            font-family: 'Times New Roman';
        }

        h3, .h3 {
            font-size: 12px !important;
        }

        .btnlogOut {
            font-size: 12px !important;
            padding: 2px 3px 0px 3px !important;
            margin-top: 15px;
            margin-left: 2px !important;
        }

        .logTime {
            margin-left: 40% !important;
        }
    </style>

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("USER MANAGEMENT SYSTEM", "Index", "User", new { area = "" }, new { @class = "navbar-brand pull-left fa fa-user-circle-o" })

            </div>
            <div class="navbar-collapse collapse">
                @if (Session["UserName"] != null)
                {
                    <ul class="nav navbar-nav">
                        <button type="submit" value="LOGOUT" class="btn btn-danger pull-right btnlogOut" onclick="location.href= '@Url.Action("LogOut" , "Login")'" title="Sign Out"><i class="fa fa-circle-o-notch"></i></button>

                        <h3 class="pull-right"> Welcome @Session["UserName"]</h3>
                        
                        @*<li>@Html.ActionLink("Home", "Index", "Home", new { area = "" }, null)</li>*@
                        @*<li>@Html.ActionLink("API", "Index", "Help", new { area = "" }, null)</li>*@
                    </ul>
                    <div class="col-md-offset-8">
                        <p class="logTime pull-right" style="font-size:10px;">Last Login: @Session["LastLoginout"].ToString()</p>
                    </div>
                }
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year -  USER MANAGEMENT SYSTEM</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
